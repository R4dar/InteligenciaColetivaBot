  "authentication": {
    "secret": "",
    "strategies": [
      "jwt",
      "local"
    ],
    "path": "/authentication",
    "service": "users",
    "identifyUserProps": ["telegramId"],
    "jwt": {
      "header": {
        "typ": "access"
      },
      "audience": "https://yourdomain.com",
      "subject": "anonymous",
      "issuer": "feathers",
      "algorithm": "HS256",
      "expiresIn": "1d"
    },
    "local": {
      "entity": "user",
      "usernameField": "telegramId"
    },
    "telegram":{
	"username": "<your username>",
	"token": "<your token>",
	"admins": ["<your id>"]
    },
    "openid":{
	"issuer": "https://id.org.br",
	"redirect_url": "/",
	"clientID": "<your client Id>",
	"clientSecret": "<your client secret>"
    }
  }
}
