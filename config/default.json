  "swagger/bot": {
    "description": "Bot service",
    "definitions": {
      "bot list": {
        "$ref": "#/definitions/bot"
      },
      "bot": {
        "type": "object",
        "required": [
          "id",
          "message"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "telegram user id to where the message will be sent"
          },
          "message": {
            "type": "object",
            "required": [
              "type",
              "value"
            ],
            "properties": {
              "type": {
                "type": "string",
                "description": "the type of the message"
              },
              "value": {
                "type": "string",
                "description": "the string of a message"
              }
            }
          }
        }
      }
    },
